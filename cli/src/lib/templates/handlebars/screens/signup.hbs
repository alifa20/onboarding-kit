import React, { useState } from 'react';
import { View, Text, StyleSheet, SafeAreaView, ScrollView, KeyboardAvoidingView, Platform, Alert } from 'react-native';
import { useNavigation } from '@react-navigation/native';
import type { NativeStackNavigationProp } from '@react-navigation/native-stack';
import { Button } from '../components/Button';
import { Input } from '../components/Input';
import { colors, typography, spacing } from '../theme';
import type { RootStackParamList } from '../navigation/types';

type NavigationProp = NativeStackNavigationProp<RootStackParamList, 'NameCapture'>;

export function NameCaptureScreen() {
  const navigation = useNavigation<NavigationProp>();

  // Form state
  const [formData, setFormData] = useState({
    {{#each nameCapture.fields}}
    {{camelCase this}}: '',
    {{/each}}
  });

  const [errors, setErrors] = useState({
    {{#each nameCapture.fields}}
    {{camelCase this}}: '',
    {{/each}}
  });

  const validateField = (field: string, value: string): boolean => {
    if (!value.trim()) {
      setErrors(prev => ({ ...prev, [field]: 'This field is required' }));
      return false;
    }
    setErrors(prev => ({ ...prev, [field]: '' }));
    return true;
  };

  const handleFieldChange = (field: string, value: string) => {
    setFormData(prev => ({ ...prev, [field]: value }));
    if (errors[field as keyof typeof errors]) {
      validateField(field, value);
    }
  };

  const handleContinue = () => {
    let isValid = true;

    // Validate all fields
    {{#each nameCapture.fields}}
    if (!validateField('{{camelCase this}}', formData['{{camelCase this}}'])) {
      isValid = false;
    }
    {{/each}}

    if (isValid) {
      // TODO: Implement account creation
      Alert.alert('Account Created', 'Welcome to {{projectName}}!', [
        {
          text: 'OK',
          {{#if hasHardPaywall}}
          onPress: () => navigation.navigate('HardPaywall'),
          {{else}}
          onPress: () => navigation.navigate('Home'),
          {{/if}}
        },
      ]);
    }
  };

  return (
    <SafeAreaView style={styles.container}>
      <KeyboardAvoidingView
        behavior={Platform.OS === 'ios' ? 'padding' : 'height'}
        style={styles.keyboardView}
      >
        <ScrollView
          contentContainerStyle={styles.scrollContent}
          keyboardShouldPersistTaps="handled"
        >
          <View style={styles.content}>
            <View style={styles.header}>
              <Text style={styles.headline}>{{nameCapture.headline}}</Text>
            </View>

            <View style={styles.form}>
              {{#each nameCapture.fields}}
              <Input
                label="{{this}}"
                value={formData['{{camelCase this}}']}
                onChangeText={(value) => handleFieldChange('{{camelCase this}}', value)}
                placeholder="Enter your {{this}}"
                error={errors['{{camelCase this}}']}
                autoCapitalize="words"
                {{#if (eq this 'email')}}
                keyboardType="email-address"
                autoCapitalize="none"
                {{/if}}
                {{#if (eq this 'phone')}}
                keyboardType="phone-pad"
                {{/if}}
              />
              {{/each}}

              <View style={styles.termsContainer}>
                <Text style={styles.termsText}>
                  By continuing, you agree to our Terms of Service and Privacy Policy
                </Text>
              </View>

              <Button
                title="{{nameCapture.cta}}"
                variant="primary"
                fullWidth
                onPress={handleContinue}
              />
            </View>
          </View>
        </ScrollView>
      </KeyboardAvoidingView>
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: colors.background,
  },
  keyboardView: {
    flex: 1,
  },
  scrollContent: {
    flexGrow: 1,
  },
  content: {
    flex: 1,
    paddingHorizontal: spacing.lg,
    paddingVertical: spacing.xl,
  },
  header: {
    marginBottom: spacing.xl,
  },
  headline: {
    ...typography.h1,
    color: colors.text,
    textAlign: 'center',
  },
  form: {
    gap: spacing.md,
  },
  termsContainer: {
    marginTop: spacing.sm,
    marginBottom: spacing.md,
  },
  termsText: {
    ...typography.caption,
    color: colors.textSecondary,
    textAlign: 'center',
  },
});
